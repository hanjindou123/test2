<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>User loginname</th>
      <th>User password</th>
      <th>User relatecount</th>
      <th>User email</th>
      <th>User realname</th>
      <th>User address</th>
      <th>User phonenumber</th>
      <th>User payable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_loginname %></td>
        <td><%= user.user_password %></td>
        <td><%= user.user_relatecount %></td>
        <td><%= user.user_email %></td>
        <td><%= user.user_realname %></td>
        <td><%= user.user_address %></td>
        <td><%= user.user_phonenumber %></td>
        <td><%= user.user_payable %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

